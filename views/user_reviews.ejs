<main>
    <div class="container admin-container">
        <div class="row">
            <div class="col-md-12">
                <div class="projects-page-title">
                    <h2>Review Information</h2>
                </div>
            </div>
            <div class="col-md-12">
                <div class="user-info">
                    <h5>
                        <%= employee.name %>
                    </h5>
                    <p>
                        <%= employee.email %>
                    </p>
                </div>
                <% let totalReview = 0, reviewSum = 0 %>
                <% for(let review of reviews){ %>
                    <% totalReview = totalReview + review.total %>
                    <% reviewSum = reviewSum + review.total*review._id %>
                <%} %>
                <% avgRating = reviewSum/employee.reviews.length  %>
                <div class="reviewer-info">

                    <div class="feedback">
                        <h5>Rating</h5>
                        <div class="rate">
                            <input type="radio" id="star5" name="rate" value="5" <%=(Math.floor(avgRating)=='5' ) ? 'checked'
                                : '' %>/>
                            <label for="star5" title="text">5 stars</label>
                            <input type="radio" id="star4" name="rate" value="4" <%=(Math.floor(avgRating)=='4' ) ? 'checked'
                                : '' %> />
                            <label for="star4" title="text">4 stars</label>
                            <input type="radio" id="star3" name="rate" value="3" <%=(Math.floor(avgRating)=='3' ) ? 'checked'
                                : '' %> />
                            <label for="star3" title="text">3 stars</label>
                            <input type="radio" id="star2" name="rate" value="2" <%=(Math.floor(avgRating)=='2' ) ? 'checked'
                                : '' %> />
                            <label for="star2" title="text">2 stars</label>
                            <input type="radio" id="star1" name="rate" value="1" <%=(Math.floor(avgRating)=='1' ) ? 'checked'
                                : '' %> />
                            <label for="star1" title="text">1 star</label>
                        </div>
                    </div>
                    <% if(employee.reviews.length != 0){ %>
                        <div class="user-review-info">
                        
                            <p><%= avgRating %> average based on <%= totalReview %> reviews.</p>
                            <hr style="border:3px solid #f1f1f1">
    
                            <div class="row">
                                <div class="col-md-8">
                                    <% for(let review of reviews){ %>
                                    <a href="/user/review/get" class="getReview" data-employee="<%= employee.id %>" data-stars="<%= review._id %>">
                                        <div class="side">
                                            <div><%= review._id %> star</div>
                                        </div>
                                        <div class="middle">
                                            <div class="bar-container">
                                                <div class="bar bg-success" data-percentage="<%= (review.total*100)/totalReview %>"></div>
                                            </div>
                                        </div>
                                        <div class="side right-review">
                                            <div><%= review.total %></div>
                                        </div>
                                    </a>
                                    <%} %>
                                    
                                </div>
                            </div>
                        </div>
                        <div class="reviews-details mt-4">
                            <h5>Reviews</h5>
                            <div class="review-list">
                                <h6>Click on a review to view reviews.</h6>
                            </div>
                        </div>
                    <% }else{ %>
                        <h5>No Reviewed Yet.</h5>

                    <%} %>

                    

                </div>
            </div>

        </div>
    </div>
</main>