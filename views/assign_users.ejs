<main>
    <div class="container admin-container">
        <div class="row">
            <div class="col-md-12">
                <div class="projects-page-title">
                    <h3>Assign Users</h3>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label for="employee">Select Employee</label>
                        <select id="employee" class="form-custom">
                            <option value="" hidden>Seect Employee</option>
                            <% for(let employee of employees){ %>
                            <option value="<%= employee.id %>"><%= employee.name %></option>
                            <%} %>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="employee">Assign Employee</label>
                        <div class="select-container">
                            <select id="assign_employee" class="form-custom">
                                <option>Please Select Employee First</option>
                            </select>
                            <button class="btn btn-info text-white" id="assign">Assign</button>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <h5 class="mt-4 mb-2">Assigned Employee For Review</h5>
                    </div>
                    <div class="col-md-12">
                        <table class="table">
                            <thead>
                              <tr>
                                <th scope="col">#</th>
                                <th scope="col">Assigned</th>
                                <th scope="col">Action</th>
                              </tr>
                            </thead>
                            <tbody id="assigned">
                              
                             
                              
                            </tbody>
                          </table>
                          <h5 class="not-found">No Data Found!</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>