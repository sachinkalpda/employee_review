<div class="container login-wrapper">
    <div class="login-container">
        <h2>Register</h2>
        <form action="/user/register/add" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" class="form-custom" placeholder="Enter Your Name...">
                <span class="text-danger error">
                    <% if(typeof errors != 'undefined' && typeof errors.name != 'undefined') { %>
                        <%= errors.name.message %>
                    <% }%>
                </span>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" class="form-custom" placeholder="Enter Your Email...">
                <span class="text-danger error">
                    <% if(typeof errors != 'undefined' && typeof errors.email != 'undefined') { %>
                        <%= errors.email.message %>
                    <% }%>
                </span>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-custom" placeholder="Enter Your Password...">
                <span class="text-danger error">
                    <% if(typeof errors != 'undefined' && typeof errors.password != 'undefined') { %>
                        <%= errors.password.message %>
                    <% }%>
                </span>
            </div>
            <div class="form-group">
                <label for="confirm_password">Confirm Password</label>
                <input type="password" name="confirm_password" id="confirm_password" class="form-custom" placeholder="Re-enter Your Password...">
                <span class="text-danger error">
                    <% if(typeof errors != 'undefined' && typeof errors.confirm_password!= 'undefined') { %>
                        <%= errors.confirm_password.message %>
                    <% }%>
                </span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
            <p class="mt-3">Registered Already? <a href="/user/login">Login</a> Here!</p>
        </form>
    </div>
</div>