
<div class="container login-wrapper">
    <div class="login-container">
        <h2>Login</h2>
        <form action="/user/create-session" method="POST">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" name="email" id="email" class="form-custom" placeholder="Enter Your Email...">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-custom" placeholder="Enter Your Password...">
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <p class="mt-3">Don't Have Account? <a href="/user/register">Register</a> Here!</p>
    </div>
</div>
