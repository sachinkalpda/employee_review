<main>
    <div class="container admin-container">
        <div class="row">
            <div class="col-md-12">
                <div class="projects-page-title">
                    <h2>All Employees</h2>
                    <a href="/admin/users/add" class="btn btn-primary">Add Employee</a>
                </div>
            </div>
            <div class="col-md-12">
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Total Reviews</th>
                        <th scope="col">Role</th>
                        <th scope="col">Joined On</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% users.forEach(function(user,index){ %>
                      <tr>
                        <th scope="row"><%= index+1 %></th>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= (user.reviews.length == 0)? 'No Reviewd Yet' : user.reviews.length + ' Review' %></td>
                        <td><%= user.role %></td>
                        <td><%= moment(user.createdAt).fromNow() %></td>
                        <td>
                          <a href="/admin/users/review/<%= user.id %>" class="me-2"><i class="fa-solid fa-circle-info text-info"></i></a>
                          <a href="/admin/users/edit/<%= user.id %>" class="me-2"><i class="fa-regular fa-pen-to-square text-primary"></i></a>
                          <a href="/admin/users/edit/<%= user.id %>" class="me-2"><a href="/admin/users/promote/<%= user.id %>" class="me-2" title="Promote To Admin"><i class="fa-solid fa-turn-up text-warning"></i></a></a>
                          <a href="/admin/users/delete/<%= user.id %>" class="delete"><i class="fa-regular fa-trash-can text-danger"></i></a>
                        </td>
                      </tr>
                      <% }) %>
                      
                    </tbody>
                  </table>
                  <% if(users.length == 0){ %>
                    <h4>No Users Found!</h4>
                    <%} %>
            </div>
        </div>
    </div>
</main>