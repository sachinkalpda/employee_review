<main>
    <div class="container admin-container">
        <div class="row">
            <div class="col-md-12">
                <h3>Edit Review</h3>
                <form action="/admin/reviews/update/<%= review.id %>" method="POST">
                    <div class="form-group">
                        <label for="review">Write A Review</label>
                        <textarea class="form-custom" name="review" id="review" placeholder="Write Review..." rows="5"><%= review.review %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="feedback">Feedback</label>
                        <textarea class="form-custom" name="feedback" id="feedback" placeholder="Write Feedback..." rows="5"><%= review.feedback %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="">Rate Performance</label>
                        <div class="rate">
                            <input type="radio" id="star5" name="rate" value="5" <%= (review.stars == '5') ? 'checked' : '' %>/>
                            <label for="star5" title="text">5 stars</label>
                            <input type="radio" id="star4" name="rate" value="4" <%= (review.stars == '4') ? 'checked' : '' %>/>
                            <label for="star4" title="text">4 stars</label>
                            <input type="radio" id="star3" name="rate" value="3" <%= (review.stars == '3') ? 'checked' : '' %> />
                            <label for="star3" title="text">3 stars</label>
                            <input type="radio" id="star2" name="rate" value="2" <%= (review.stars == '2') ? 'checked' : '' %> />
                            <label for="star2" title="text">2 stars</label>
                            <input type="radio" id="star1" name="rate" value="1" <%= (review.stars == '1') ? 'checked' : '' %> />
                            <label for="star1" title="text">1 star</label>
                          </div>
                    </div>


                    <button type="submit" class="btn btn-primary">Update Review</button>
                </form>
            </div>
        </div>
    </div>
</main>